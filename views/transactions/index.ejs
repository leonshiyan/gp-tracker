<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<div class="container">
  <h2>All the Transactions!</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Transaction Time</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Transaction Link</th>
      </tr>
    </thead>
    <tbody>
      <% transactions.forEach(transaction => { %>
        <tr>
          <th scope="row"><%= transaction.createdAt %></th>
          <td><%= (transaction.amount/transaction.gasAmount).toFixed(2) %> </td>
          <td><a href="/transactions/<%= transaction._id %>">Here</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


